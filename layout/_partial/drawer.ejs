<mdui-navigation-drawer close-on-overlay-click close-on-esc id="drawer">
    <mdui-list>
        <% for (name in theme.drawer.menu) { %>
            
            <mdui-list-item rounded icon="<%= theme.drawer.menu[name].icon %>"
                href="<%- url_for(theme.drawer.menu[name].url) %>"
                <%if(is_current(theme.drawer.menu[name].url)){%>active<%}%>
                <%if(theme.drawer.menu[name].home&&is_home()){%>active<%}%>
                rel="next">
                <%= name %>
            </mdui-list-item>
            
            <% } %>
    </mdui-list>
</mdui-navigation-drawer>